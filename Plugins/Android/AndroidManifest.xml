<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" 
		  package="com.orange.OrangeVRxperience">
		  
		  
	
	<application android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" 
				 android:icon="@drawable/app_icon" 
				 android:label="@string/app_name" 
				 android:name="[INSERT UNITY APPLICATION HERE]">
		
		<!-- Unity -->
		<activity android:name="[INSERT UNITY ACTIVITY HERE]"
				 android:label="@string/app_name"
				 android:screenOrientation="landscape"
				 android:keepScreenOn="true"
				 android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|uiMode|screenSize|smallestScreenSize|fontScale"
				 android:launchMode="singleTask">
			
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
				<!-- <category android:name="android.intent.category.LEANBACK_LAUNCHER" /> -->
                <category android:name="com.google.intent.category.CARDBOARD" />
			</intent-filter>
			
			<meta-data android:name="unityplayer.UnityActivity" android:value="true" />
		</activity>
		
        <meta-data android:name="IMMERSIVE_MODE" android:value="true" />
		
		<!-- Project related (hidden) -->
		
		<!-- OBB Downloader -->
		<activity android:name="com.unity3d.plugin.downloader.UnityDownloaderActivity"/>
		<service android:name="com.unity3d.plugin.downloader.UnityDownloaderService"/>
		<receiver android:name="com.unity3d.plugin.downloader.UnityAlarmReceiver"/>
		
	</application>
	
	<uses-sdk android:minSdkVersion="21" android:targetSdkVersion="22" />
	<uses-feature android:glEsVersion="0x00020000" />
	
	<!-- Cardboard needed features -->
    <uses-feature android:name="android.hardware.sensor.accelerometer" android:required="true"/>
    <uses-feature android:name="android.hardware.sensor.gyroscope" android:required="true"/>
    <uses-feature android:name="android.software.vr.mode" android:required="false"/>
    <uses-feature android:name="android.hardware.vr.high_performance" android:required="false"/>
    
    <!-- GoogleVR needed features -->
   <!--  <uses-permission android:name="android.permission.NFC" /> -->

	<!-- Internet is required -->
	<uses-permission android:name="android.permission.INTERNET"/>

	<!-- Needed for Chromecast -->
	<!-- <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> -->

	<!-- Needed for GearVR -->
	<!-- <uses-permission android:name="android.permission.CAMERA"/>-->
	<!-- <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> -->

	<!-- Project related (hidden) -->
	
	<!-- Needed by OBB Downloader -->
	<uses-permission android:name="com.android.vending.CHECK_LICENSE"/>
</manifest>